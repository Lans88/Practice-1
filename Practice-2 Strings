print("Hi!\tMyname\tis\t\(name)\tlive\tin\t\(country).\nnow\thas\tcome\t\(seasonNow)\tand\t\(year)year.")

//task 4: разбить имя на символы и перенести каждую букву на новую строку
var charName = Array("Artem")
print(charName[0],"\n",
    charName[1],"\n",
    charName[2],"\n",
    charName[3],"\n",
    charName[4],"\n")

//task 5: Создать Int и String, преобразовать Int -> String и сложить в одну строку
let valueInt = 5
let valueString = "Five"
var intInString = String(valueInt)
